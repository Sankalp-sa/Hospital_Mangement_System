<section class="home ">
     
<div class="flex flex-col items-center justify-center min-h-screen">
    <div class="w-1/2 bg-white  mx-auto p-6 rounded-md shadow-md">
      <h1 class="text-2xl font-medium text-center">Edit Profile Details</h1>
      <form action="/updatedDetails" method="post" class="mt-6">
        <div class="flex flex-col sm:flex-row sm:space-x-4 mb-3">
          <div class="flex-grow">
            <label class="block mb-2 text-sm font-medium text-gray-700" for="phone_number">Name</label>
            <input value="<%= patientD[0].pname %>" class="w-full p-2 border rounded-md focus:outline-none focus:border-black" type="name" id="name" name="name" placeholder="Enter your name" required />
          </div>
        </div>

        <div class="flex flex-col sm:flex-row sm:space-x-4 mb-3">
            <div class="flex-grow">
              <label class="block mb-2 text-sm font-medium text-gray-700">Username</label>
              <input value="<%= patientD[0].puname %>" class="w-full p-2 border rounded-md focus:outline-none focus:border-black" type="name" id="name" name="uname" placeholder="Enter your name" required />
            </div>
        </div>

        <div class="mb-3">
          <label class="block mb-2 text-sm font-medium text-gray-700" for="email_address">Email Address</label>
          <input value="<%= patientD[0].pemail %>" class="w-full p-2 border rounded-md focus:outline-none focus:border-black" type="email" id="email" name="email" placeholder="Enter email address" required />
        </div>

        <div class="flex flex-col sm:flex-row sm:space-x-4 mb-3">
          <div class="flex-grow">
            <label class="block mb-2 text-sm font-medium text-gray-700" for="phone_number">Phone Number</label>
            <input value="<%= patientD[0].phone %>" class="w-full p-2 border rounded-md focus:outline-none focus:border-black" type="tel" id="phone_number" name="phone_number" placeholder="Enter phone number" required />
          </div>
          <div class="flex-grow">
            <label class="block mb-2 text-sm font-medium text-gray-700" for="birthDate">Birth Date</label>
            <input value="<%= patientD[0].BirthDate.toISOString().split('T')[0] %>" class="w-full p-2 border rounded-md focus:outline-none focus:border-black" name="birthDate" type="date" id="birth_date" placeholder="Enter birth date" required />
          </div>
        </div>

        <div class="mb-3">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Gender</h3>
          <div class="flex items-center space-x-4">
            <label class="inline-flex items-center">
              <input type="radio" class="form-radio" name="gender" value="male" checked>
              <span class="ml-2">Male</span>
            </label>
            <label class="inline-flex items-center">
              <input type="radio" class="form-radio" name="gender" value="female">
              <span class="ml-2">Female</span>
            </label>  
            <label class="inline-flex items-center">
              <input type="radio" class="form-radio" name="gender" value="other">
              <span class="ml-2">Prefer not to say</span>
            </label>
          </div>
        </div>
        <label class="block mb-2 text-sm font-medium text-gray-700" for="address">Address</label>
        <textarea id="address" name="address" class="resize-none border rounded-md py-2 px-3 text-gray-700 leading-tight  focus:outline-none focus:border-black w-full" placeholder="Enter your address"><%= patientD[0].address %></textarea>
        <div class="flex flex-col sm:flex-row sm:space-x-4 mb-3">
         
      <button type="submit" class="w-full py-2 px-4 bg-blue-300 hover:bg-blue-400 text-black rounded-md focus:outline-none text-2xl" id="submitBtn">Save Changes</button>
      </form>
    </div>
    </div> 
      
</section>

